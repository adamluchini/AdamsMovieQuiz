@model MovieObjectTest.Models.ArgoClass
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>

<h1>Quiz 1</h1>
<button class="clue1">Clue #1</button>
<div id="argo-set-1"></div>
<button class="clue2">Clue #2</button>
<div id="argo-set-2"></div>


<form action="Guess" class="user-guess">
    <label for="userguess">Guess</label>
    <input type="text" name="userguess" />
    <button type="submit">Submit</button>
</form>
<div id="correct"></div>


<script type="text/javascript">
    $(document).ready(function () {
        $('.clue1').click(function () {
            $.ajax({
                type: 'GET',
                dataType: 'html',
                url: '@Url.Action("ArgoAnswer")',
                success: function (result) {
                    $('#argo-set-1').html(result);
                }
            });
        });
        $('.clue2').click(function () {
            $.ajax({
                type: 'GET',
                dataType: 'html',
                url: '@Url.Action("ArgoAnswer2")',
                success: function (result) {
                    $('#argo-set-2').html(result);
                }
            });
        });
        $('.user-guess').submit(function (event) {
            event.preventDefault();
            $.ajax({
                type: 'GET',
                data: $(this).serialize(),
                //data: $("userguess").val(),
                dataType: 'html',
                url: '@Url.Action("Guess")',
                success: function (result) {
                    $('#correct').html(result);
                }
            });
        });
    });
</script>